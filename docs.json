{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "EPAdossier",
  "colors": {
    "primary": "#009689",
    "light": "#234e52",
    "dark": "#234e52"
  },
  "background": {
    "light": "#F8F5F0",
    "dark": "#1D1D1D"
  },
  "favicon": "/logo.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Handleidingen",
        "groups": [
          {
            "group": "Welkom",
            "pages": ["index"]
          },
          {
            "group": "Platform",
            "pages": ["platform/rollen"]
